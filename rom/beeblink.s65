                iny
                tya             ;text height
                jsr send_payload_byte

                lda #0          ;get machine type
                ldx #1
                jsr osbyte
                txa
                jsr send_payload_byte
                
                ldy #3
send_text_window_loop:
                lda $308,y
                jsr send_payload_byte
                dey
                bpl send_text_window_loop

                jsr recv_response_and_discard_payload

                ; Disable cursor editing and make cursor keys return
