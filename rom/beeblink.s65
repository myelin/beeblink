fsvectors .proc
                .word blfs_osfile ;$212
                .word blfs_osargs ;$214
                .word blfs_osbget ;$216
                .word blfs_osbput ;$218
                .word blfs_osgbpb ;$21a
                .word blfs_osfind ;$21c
                .word blfs_osfsc  ;$21e
end:
                .pend

