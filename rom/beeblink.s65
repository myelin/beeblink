                ldx old_escape_mode
                ldy #0
                lda #229
                jsr osbyte

                ; Restore cursor keys.
                ldx old_cursors_mode
                lda #4
                jsr osbyte

                pla
                cmp #RESPONSE_VOLUME_BROWSER_BOOT
                beq +
                rts

