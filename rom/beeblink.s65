; FSC A=9 - *EX
;
fsc_ex: .proc
                lda #REQUEST_STAR_EX
                jmp communicate_star_command
                .pend

;-------------------------------------------------------------------------
;
; FSC A=10 - *INFO
;
fsc_info: .proc
                lda #REQUEST_STAR_INFO
                jmp communicate_star_command
                .pend

